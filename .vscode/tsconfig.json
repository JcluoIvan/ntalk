{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "../dist",
        "watch": true,
        "baseUrl": "../src",
        "paths": {
            "@/*": ["../*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["../src/**/*"],
    "exclude": ["../node_modules", "../resources"]
}
