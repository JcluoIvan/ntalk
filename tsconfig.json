{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "skipLibCheck": true,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./resources",
        "paths": {
            "@/*": ["resources/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "exclude": ["node_modules"]
}
